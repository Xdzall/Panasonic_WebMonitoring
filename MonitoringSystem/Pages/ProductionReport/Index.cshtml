                                <i class="bi bi-file-earmark-excel-fill"></i> Template CU
                            </a>
                            <a asp-page-handler="DownloadTemplate" asp-route-type="cs" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-file-earmark-excel-fill"></i> Template CS
                            </a>
                        </div>
                    </div>
                    <hr />
                    <form method="post" enctype="multipart/form-data" asp-page-handler="Upload">
                        <div class="mb-3">
                            <label for="UploadedFile" class="form-label">Pilih File Plan:</label>
                            <input type="file" id="UploadedFile" name="UploadedFile" class="form-control" required>
