.filter-content .form-select-sm.selected {
    font-weight: 700 !important;
}
.filter-content .form-select:focus,
.filter-content .form-control:focus {
    background-color: rgba(255, 255, 255, 0.20);
    border-color: rgba(255, 255, 255, 0.3);
    color: #ffffff;
