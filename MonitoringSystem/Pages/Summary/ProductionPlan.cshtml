@page
@model MonitoringSystem.Pages.Shared.ProductionPlanModel
@{
    ViewData["Title"] = "Production Plan";
    string formattedDate = DateTime.Now.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("en-US"));
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/Sidebar.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @* SweetAlert2 *@
    <link rel="stylesheet" href="~/css/sweetalert2.css" />

    <style>
        /* Pastikan parent container punya position relative */
.input-group.position-relative {
    position: relative !important;
}

/* Dropdown container - FIXED POSITIONING */
.dropdown.custom-dropdown {
    position: absolute !important;
    top: calc(100% + 2px) !important;
    left: 0 !important;
    right: 0 !important;
    width: 100% !important;
    z-index: 99999 !important;
    display: none;

    /* Styling */
    background-color: rgba(30, 40, 60, 0.98) !important;
    border: 2px solid rgba(100, 181, 246, 0.5) !important;
    border-radius: 8px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    max-height: 200px;
    overflow-y: auto;
    margin-top: 0;
}

/* Dropdown items */
.dropdown.custom-dropdown div {
    padding: 10px;
    cursor: pointer;
    color: #ffffff !important;
    background-color: transparent !important;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

/* Hover effect */
.dropdown.custom-dropdown div:hover {
    background-color: rgba(100, 181, 246, 0.2) !important;
    color: #ffffff !important;
}

/* Last item - no border */
.dropdown.custom-dropdown div:last-child {
    border-bottom: none;
}

/* Scrollbar styling */
.dropdown.custom-dropdown::-webkit-scrollbar {
    width: 6px;
}

.dropdown.custom-dropdown::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 3px;
}

.dropdown.custom-dropdown::-webkit-scrollbar-thumb {
    background: rgba(100, 181, 246, 0.3);
    border-radius: 3px;
}

.dropdown.custom-dropdown::-webkit-scrollbar-thumb:hover {
    background: rgba(100, 181, 246, 0.5);
}
/* ========== FILTER AREA WITH LINES - SAMA PERSIS DENGAN LOSS TIME ========== */
.filter-area-with-lines {
    position: relative;
    padding: 1px 0;
    margin-bottom: -63px !important;
    margin-top: -20px;
    min-height: 10px;
    width: calc(100% - 14px);
    margin-left: 7px;
    margin-right: 7px;
}

.panamon-bottom-line,
.panamon-bottomm-line {
    position: absolute !important;
    left: -13px !important;
    right: -13px !important;
    height: 2px !important;
    background: rgba(255, 255, 255, 0.04) !important;
    z-index: 999 !important;
    pointer-events: none !important;
    display: block !important;
}

.panamon-bottom-line {
    top: 0 !important;
    border-top: 2px solid rgba(255, 255, 255, 0.08) !important;
}

.panamon-bottomm-line {
    bottom: 0 !important;
    border-bottom: 2px solid rgba(255, 255, 255, 0.08) !important;
}

/* FILTER CONTENT - SAMA PERSIS DENGAN LOSS TIME */
.filter-content {
    position: relative;
    z-index: 2;
    padding: 6px 0;
    border-radius: 15px;
    margin-left: -8px;
    margin-right: 7px;
}

/* FORM SELECT & CONTROL - SAMA PERSIS */
.filter-content .form-select.selected {
    font-weight: 700 !important;
}

.filter-content .form-select,
.filter-content .form-control {
    height: 28px;
    padding: 0 22px 0 8px;
    font-size: 12px;
    line-height: 20px;
    border-radius: 999px;
    background-color: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.5);
    color: #ffffff;
    text-align: center;
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    padding-top: 0;
    padding-bottom: 0;
    vertical-align: middle;
}

.filter-content .form-select {
    height: 28px;
    padding: 0 !important;
    padding-left: 12px !important;
    padding-right: 28px !important;
    padding-top: -2px !important;
    font-size: 12px;
    line-height: 16px;
    border-radius: 999px;
    background-color: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.5);
    color: #ffffff;
    text-align: center;
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
