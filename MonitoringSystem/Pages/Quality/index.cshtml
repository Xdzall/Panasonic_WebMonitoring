@page
@model MonitoringSystem.Pages.Quality.QualityModel
@{
    ViewData["Title"] = "Production Quality";
}

<form method="post">

    <div class="row mx-3">
        <div class="col-2 rounded" style="border: 1px solid rgb(61, 121, 176);">
    <div class="row m-2">
        <button type="submit"
                class="@(Model.MachineCode == "MCH1-01" ? "btn text-white fs-5 fw-bold" : "btn btn-outline-secondary fs-5 fw-bold")"
                style="@(Model.MachineCode == "MCH1-01" ? "background-color:rgb(61, 121, 176);" : "")"
                name="MachineCode" value="MCH1-01">
            LINE CU
        </button>
    </div>
    <div class="row m-2">
        <button type="submit"
                class="@(Model.MachineCode == "MCH1-02" ? "btn text-white fs-5 fw-bold" : "btn btn-outline-secondary fs-5 fw-bold")"
                style="@(Model.MachineCode == "MCH1-02" ? "background-color:rgb(61, 121, 176);" : "")"
                name="MachineCode" value="MCH1-02">
            LINE CS
        </button>
    </div>
</div>
        <div class="col ms-2">
            <div class="row rounded p-2" style="border: 1px solid rgb(61, 121, 176);">
                <div class="col justify-content-center py-1 ms-2">
                    <div class="row mb-2">
                        <div class="card-header text-white fw-bold py-2 rounded-2" style="text-align: center; background-color: rgb(61, 121, 176);">TARGET RATIO</div>
                    </div>
                    <div class="row">
                        <div id="openModalButton" class="btn btn-outline-secondary fs-5 fw-semibold">1.00 %</div>
                    </div>
                </div>
                <div class="col justify-content-center py-1 ms-2">
                    <div class="row mb-2">
                        <div class="card-header text-white fw-bold py-2 rounded-2" style="text-align: center; background-color: rgb(61, 121, 176);">DEFECT QUANTITY</div>
                    </div>
                    <div class="row">
                        <div class="btn btn-outline-secondary fs-5 fw-semibold">@Model.DefectQuantity</div>
                    </div>
                </div>
                <div class="col justify-content-center py-1 ms-2">
                    <div class="row mb-2">
                        <div class="card-header text-white fw-bold py-2 rounded-2" style="text-align: center; background-color: rgb(61, 121, 176);">DEFECT RATIO</div>
                    </div>
                    <div class="row">
                        <div class="btn btn-outline-secondary fs-5 fw-semibold">@String.Format("{0:0.00}", Model.DefectRatio) %</div>
                    </div>
                </div>
                <div class="col justify-content-center py-1 mx-2">
                    <div class="row mb-2">
                        <div class="card-header text-white fw-bold py-2 rounded-2" style="text-align: center; background-color: rgb(61, 121, 176);">TOTAL OUTPUT</div>
                    </div>
                    <div class="row">
                        <div class="btn btn-outline-secondary fs-5 fw-semibold">@Model.TotalPlan</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mx-3 my-2">
        <div class="col-2 rounded" style="border: 1px solid rgb(61, 121, 176);">
            <div class="row m-2">
                <span class="btn text-white fs-5 fw-bold" style="background-color:rgb(61, 121, 176); display:inline-block; text-align:center;">STATION</span>
            </div>
            <div class="row m-2">
                <button type="submit" class="btn btn-outline-secondary fs-5 fw-bold">PREPARING</button>
            </div>
            <div class="row m-2">
                <button type="submit" class="btn btn-outline-secondary fs-5 fw-bold">GAS LEAK</button>
            </div>
            <div class="row m-2">
                <button type="submit" class="btn btn-outline-secondary fs-5 fw-bold">INNER</button>
            </div>
            <div class="row m-2">
                <button type="submit" class="btn btn-outline-secondary fs-5 fw-bold">RUNNING</button>
            </div>
            <div class="row m-2">
                <button type="submit" class="btn btn-outline-secondary fs-5 fw-bold">FINAL</button>
            </div>
            <div class="row m-2">
                <button type="submit" class="btn btn-outline-secondary fs-5 fw-bold">DETAIL</button>
            </div>
            <input type="hidden" id="station" name="Station" />
        </div>
        <div class="col ms-2">
            <div class="row rounded p-2 align-content-xl-center" style="border: 1px solid rgb(61, 121, 176);">
                <label class="fs-2 text-center fw-bolder" style="color: rgb(61, 121, 176);">DAILY DEFECT</label>
                @{
                    var dateDisplay = Model.StartDate == Model.EndDate
                        ? DateTime.Parse(Model.StartDate).ToString("dd MMM yyyy")
                        : $"{DateTime.Parse(Model.StartDate).ToString("dd MMM yyyy")} - {DateTime.Parse(Model.EndDate).ToString("dd MMM yyyy")}";
                }
<label class="fs-4 text-center fw-bold" style="color: rgb(61, 121, 176);">@dateDisplay</label>
                <div class="d-flex justify-content-center">
                    <canvas class="my-4 container-fluid" width="680" id="bar"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mx-3 my-2">
        <div class="col-2 rounded" style="border: 1px solid rgb(61, 121, 176);">
            <div class="row m-2">
                <span class="btn text-white fs-5 fw-bold" style="background-color:rgb(61, 121, 176); display:inline-block; text-align:center;">DAILY</span>
            </div>
            <div class="row m-2">
                <input class="form-control" type="date" asp-for="StartDate">
            </div>
            <div class="row m-2">
                <input class="form-control" type="date" asp-for="EndDate">
            </div>
            <div class="row m-2">
                <button type="submit" class="btn btn-primary fw-bold">Apply Filter</button>
            </div>
        </div>

        <div class="col ms-2">
            <div class="row rounded p-2" style="border: 1px solid rgb(61, 121, 176);">
                <label class="fs-3 fw-bolder" style="color: rgb(61, 121, 176);">DEFECT PROBLEM</label>
                <div class="d-flex justify-content-center">
                    <canvas class="my-4 container-fluid" width="530" height="280" id="piea"></canvas>
                </div>
                <button class="btn text-white mb-2" style="background-color: rgb(61, 121, 176);">Detail</button>
            </div>
        </div>
        <div class="col ms-2">
            <div class="row rounded p-2" style="border: 1px solid rgb(61, 121, 176);">
                <label class="fs-3 fw-bolder" style="color: rgb(61, 121, 176);">DEFECT BY MODEL</label>
                <div class="d-flex justify-content-center">
                    <canvas class="my-4 container-fluid" width="530" height="280" id="pieb"></canvas>
                </div>
                <button class="btn text-white mb-2" style="background-color: rgb(61, 121, 176);">Detail</button>
            </div>
        </div>
    </div>

    <div class="row mx-3 my-2">
        <div class="col-2"></div> <div class="col ms-2">
            <div class="row rounded p-2" style="border: 1px solid rgb(61, 121, 176);">
                <label class="fs-2 text-center fw-bolder" style="color: rgb(61, 121, 176);">MONTHLY DEFECT</label>
                <label class="fs-4 text-center fw-bold" style="color: rgb(61, 121, 176);">@(DateTime.Now.Date.ToString("MMMM yyyy"))</label>
                <div class="d-flex justify-content-center">
                    <canvas class="my-4 container-fluid" width="680" id="bara"></canvas>
                </div>
            </div>
        </div>
    </div>

</form> <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // Kode JavaScript tidak perlu diubah
    var dailyDefectLabels = @Html.Raw(Json.Serialize(Model.TopDailyDefects.Select(d => d.Cause)));
    var dailyDefectData = @Html.Raw(Json.Serialize(Model.TopDailyDefects.Select(d => d.Quantity)));

    var defectProblemLabels = @Html.Raw(Json.Serialize(Model.DefectProblems.Select(d => d.Cause)));
    var defectProblemData = @Html.Raw(Json.Serialize(Model.DefectProblems.Select(d => d.Quantity)));

    var defectByModelLabels = @Html.Raw(Json.Serialize(Model.DefectsByModel.Select(d => d.ProductName)));
    var defectByModelData = @Html.Raw(Json.Serialize(Model.DefectsByModel.Select(d => d.Quantity)));

    const ctxBar = document.getElementById('bar');
    new Chart(ctxBar, {
        type: 'bar',
        data: {
            labels: dailyDefectLabels,
            datasets: [
                {
                    data: dailyDefectData,
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 2
                }
            ]
        },
        options: {
            responsive: false,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                x: {
                    stacked: true,
                    barPercentage: 0.7
                },
                y: {
                    stacked: true,
                    beginAtZero: true
                }
            }
        }
    });

    const ctxPieA = document.getElementById('piea');
    new Chart(ctxPieA, {
        type: 'pie',
        data: {
            labels: defectProblemLabels,
            datasets: [{
                data: defectProblemData,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.6)', 'rgba(54, 162, 235, 0.6)',
                    'rgba(255, 206, 86, 0.6)', 'rgba(75, 192, 192, 0.6)',
                    'rgba(153, 102, 255, 0.6)', 'rgba(255, 159, 64, 0.6)',
                    'rgba(255, 99, 255, 0.6)', 'rgba(99, 255, 132, 0.6)',
                ],
                borderWidth: 2
            }]
        },
        options: {
        responsive: false,
        plugins: {
            legend: {
                display: false 
            }
        }
    }
});

    const ctxPieB = document.getElementById('pieb');
    new Chart(ctxPieB, {
        type: 'pie',
        data: {
            labels: defectByModelLabels,
            datasets: [{
                data: defectByModelData,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.6)',
                    'rgba(54, 162, 235, 0.6)',
                    'rgba(255, 206, 86, 0.6)',
                    'rgba(75, 192, 192, 0.6)',
                    'rgba(153, 102, 255, 0.6)',
                    'rgba(255, 159, 64, 0.6)'
                ],
                borderWidth: 2
            }]
        },
        options: {
            responsive: false,
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });

    const ctxBarA = document.getElementById('bara');
    new Chart(ctxBarA, {
        type: 'bar',
        data: {
            labels: ['Day 1', 'Day 2', 'Day 3', ' Day 4', 'Day 5', 'Day 6', 'Day 7', 'Day 8', 'Day 9', 'Day 10'],
            datasets: [
                {
                    data: [12, 19, 3, 5, 2, 3],
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 2
                },
                {
                    data: [7, 12, 5, 8, 3, 6],
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 2
                }
            ]
        },
        options: {
            responsive: false,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                x: {
                    stacked: true,
                    barPercentage: 0.7
                },
                y: {
                    stacked: true,
                    beginAtZero: true
                }
            }
        }
    });
</script>