         'rgba(132, 99, 255, 0.7)', 'rgba(235, 162, 54, 0.7)'
    ];

    const allCauses = [...new Set([...defectProblemLabels, ...yearlyDefectsRaw.map(d => d.cause)])];
    const colorMap = {};
    allCauses.forEach((cause, index) => {
         colorMap[cause] = colorPalette[index % colorPalette.length];
    });

