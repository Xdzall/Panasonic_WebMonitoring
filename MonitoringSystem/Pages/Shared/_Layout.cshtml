    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const highlighter = document.getElementById("navHighlighter");
            const links = document.querySelectorAll(".nav-item-link");
            const currentPath = window.location.pathname.toLowerCase();
            let activeLink = null;

            function moveHighlighter(element) {
                if (!element) {
                    highlighter.style.opacity = "0";
                    return;
                }

                const left = element.offsetLeft;
                const width = element.offsetWidth;

                highlighter.style.opacity = "1";
                highlighter.style.width = `${width}px`;
                highlighter.style.left = `${left}px`;

                links.forEach(link => link.classList.remove("active-text"));
                element.classList.add("active-text");
            }

            links.forEach(link => {
                const linkHref = link.getAttribute("href").replace("~", "").toLowerCase().trim();
                if (currentPath.includes(linkHref) && linkHref !== "/") {
                    activeLink = link;
                } else if (currentPath === "/" && (linkHref === "/" || linkHref === "/home")) {
                    activeLink = link;
                }
            });

            if (activeLink) {
                setTimeout(() => moveHighlighter(activeLink), 50);
            }

            links.forEach(link => {
                link.addEventListener("mouseenter", function () {
                    moveHighlighter(this);
                });
            });

            const navContainer = document.querySelector(".nav-menu");
            navContainer.addEventListener("mouseleave", function () {
                if (activeLink) {
                    moveHighlighter(activeLink);
                } else {
                    highlighter.style.opacity = "0";
                    links.forEach(link => link.classList.remove("active-text"));
                }
            });
        });
    </script>
