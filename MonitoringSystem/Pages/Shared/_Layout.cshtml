    <script>
    document.addEventListener("DOMContentLoaded", function () {
        const shift1Checkbox = document.getElementById("shift1Checkbox");
        if (shift1Checkbox) {
            const shift2Checkbox = document.getElementById("shift2Checkbox");
            const shift3Checkbox = document.getElementById("shift3Checkbox");

            const shift1Table = document.getElementById("Shift1Table");
            const shift2Table = document.getElementById("Shift2Table");
            const shift3Table = document.getElementById("Shift3Table");

            function updateTableVisibility() {
                const showShift1 = shift1Checkbox.checked;
                const showShift2 = shift2Checkbox.checked;
                const showShift3 = shift3Checkbox.checked;

                const anyChecked = showShift1 || showShift2 || showShift3;

                if (shift1Table) shift1Table.style.display = showShift1 || !anyChecked ? "" : "none";
                if (shift2Table) shift2Table.style.display = showShift2 || !anyChecked ? "" : "none";
                if (shift3Table) shift3Table.style.display = showShift3 || !anyChecked ? "" : "none";
            }

            shift1Checkbox.addEventListener("change", updateTableVisibility);
            shift2Checkbox.addEventListener("change", updateTableVisibility);
            shift3Checkbox.addEventListener("change", updateTableVisibility);

            updateTableVisibility();
        }
    });

